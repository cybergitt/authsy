{
  "name": "express-auth",
  "version": "1.0.0",
  "description": "A simple user authentication APIs to authenticate users",
  "main": "index.ts",
  "private": true,
  "engines": {
    "node": ">=18.20.2",
    "pnpm": ">=9",
    "npm": "please-use-pnpm"
  },
  "scripts": {
    "format": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
    "format:fix": "prettier --write src",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "type-check": "tsc && tsc-alias",
    "prebuild": "rimraf dist coverage",
    "build": "pnpm prebuild && swc src --out-dir dist",
    "build:ts": "pnpm prebuild && tsc",
    "debug:watch": "nodemon --ext ts --exec node --inspect -r @swc-node/register src/index.ts",
    "debug:compile": "swc src -w --out-dir dist",
    "dev": "concurrently \"pnpm debug:compile\" \"pnpm debug:watch\" ",
    "start": "node dist/src/index.js"
  },
  "keywords": [
    "API",
    "REST",
    "Express"
  ],
  "author": "Sigit Prayitno",
  "license": "ISC",
  "devDependencies": {
    "@swc-node/register": "^1.10.2",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.6.7",
    "@swc/helpers": "^0.5.11",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "pino-http": "^10.2.0",
    "zod": "^3.23.8"
  }
}
